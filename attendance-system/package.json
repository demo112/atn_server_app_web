{
  "name": "attendance-system-monorepo",
  "private": true,
  "description": "Attendance System Monorepo",
  "scripts": {
    "dev": "pnpm -r dev",
    "dev:trae": "npx --yes concurrently -k -n \"SERVER,WEB,APP\" -c \"blue,green,magenta\" \"pnpm --filter @attendance/server dev\" \"pnpm --filter @attendance/web dev\" \"pnpm --filter @attendance/app start\"",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "lint:docs": "node scripts/docs-lint.js"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "fast-check": "^4.5.3",
    "typescript": "^5.0.0",
    "vitest": "^4.0.18",
    "vitest-mock-extended": "^3.1.0"
  },
  "pnpm": {
    "overrides": {}
  }
}
