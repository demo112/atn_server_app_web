{
  "name": "attendance-system-monorepo",
  "private": true,
  "description": "Attendance System Monorepo",
  "scripts": {
    "dev": "pnpm -r dev",
    "dev:trae": "npx --yes concurrently -k -n \"SERVER,WEB,APP\" -c \"blue,green,magenta\" \"pnpm --filter @attendance/server dev\" \"pnpm --filter @attendance/web dev\" \"pnpm --filter @attendance/app start\"",
    "dev:services": "npx --yes concurrently -k -n \"SERVER,WEB\" -c \"blue,green\" \"npm run dev -w @attendance/server\" \"npm run dev -w @attendance/web\"",
    "start:all": "node scripts/start-all.js",
    "dev:app": "pnpm --filter @attendance/app start",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "test:ci": "cross-env FC_NUM_RUNS=1000 pnpm -r test",
    "test:pbt": "cross-env TEST_MODE=pbt pnpm -r exec vitest run",
    "test:e2e": "pnpm --filter @attendance/e2e test:e2e",
    "test:e2e:ui": "pnpm --filter @attendance/e2e test:e2e:ui",
    "test:e2e:headed": "pnpm --filter @attendance/e2e test:e2e:headed",
    "test:e2e:debug": "pnpm --filter @attendance/e2e test:e2e:debug",
    "test:e2e:codegen": "pnpm --filter @attendance/e2e test:e2e:codegen",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:docs": "node scripts/docs-lint.js",
    "typecheck": "pnpm -r exec tsc --noEmit",
    "prepare": "husky"
  },
  "lint-staged": {
    "packages/**/*.{ts,tsx,js,mjs}": [
      "eslint --fix"
    ]
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/validator": "^13.15.10",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.2",
    "fast-check": "^4.5.3",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "mini-svg-data-uri": "^1.4.4",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.18",
    "vitest-mock-extended": "^3.1.0"
  },
  "pnpm": {
    "overrides": {
      "react": "19.1.0",
      "react-dom": "19.1.0",
      "react-test-renderer": "19.1.0",
      "scheduler": "0.26.0"
    }
  }
}
